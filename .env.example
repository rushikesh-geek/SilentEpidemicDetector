# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=sed_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ML Configuration
ML_MODEL_PATH=./ml/saved_models
ANOMALY_THRESHOLD=0.7
DETECTION_CONFIDENCE_MIN=0.6

# Agent Configuration
OPENAI_API_KEY=your_openai_api_key_here
LANGCHAIN_VERBOSE=true

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=alerts@sed.system

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_NUMBER=+1234567890

# WhatsApp Configuration (Twilio)
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Alert Recipients
ALERT_EMAILS=hospital1@example.com,pharmacy1@example.com
ALERT_PHONES=+919876543210,+919876543211
ALERT_WEBHOOKS=https://webhook.site/your-unique-url

# Scheduler Configuration
SCHEDULER_ENABLED=true
AGGREGATION_CRON=0 2 * * *
DETECTION_CRON=0 3 * * *

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Environment
ENV=development
DEBUG=true
LOG_LEVEL=INFO
